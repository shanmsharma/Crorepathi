<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36144c	 "
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/audience"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/audience" />

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/phone" />

                <ImageButton
                    android:id="@+id/fifty"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/fifty" />
            </LinearLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="310dp"
                android:layout_height="240dp"
                android:alpha="0.2"
                app:srcCompat="@drawable/crorepathi2" />

            <ImageButton
                android:id="@+id/score"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/score" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <Button
                android:id="@+id/Question"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/answer_button"
                android:text="Question"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Answer1"
                    android:background="@drawable/answer_button"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Answer2"
                    android:background="@drawable/answer_button"
                    android:textColor="#FFFFFF"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Answer3"
                    android:background="@drawable/answer_button"
                    android:textColor="#FFFFFF"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/Answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Answer4"
                    android:background="@drawable/answer_button"
                    android:textColor="#FFFFFF"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>